# Wymuszenie ładowania index.html jako strony głównej
DirectoryIndex index.html

# Wyłączenie listowania plików w folderze (bezpieczeństwo)
Options -Indexes

# Zapobieganie błędom 403 przy braku slash na końcu URL
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /timeflow/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_URI} !(.*)\/$
    RewriteRule ^(.*)$ https://conceptfab.com/timeflow/$1/ [L,R=301]
</IfModule>

# Kompresja GZIP — zmniejsza transfer CSS/JS/HTML o ~75-80%
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css application/javascript application/json image/svg+xml
</IfModule>

# Cache statycznych assetów — powtórne wizyty bez ponownego pobierania
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

<IfModule mod_headers.c>
    <FilesMatch "\.(css|js|webp|png|ico|svg|woff2)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    <FilesMatch "\.(html|php)$">
        Header set Cache-Control "no-cache, must-revalidate"
    </FilesMatch>
</IfModule>
